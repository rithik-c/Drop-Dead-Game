<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
      <%= button_to "Destroy this user", user, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New user", signup_path %>
